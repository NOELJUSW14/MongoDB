<div class='row'>
  <h3 class='card' style='width: 18rem;'>{{comics.title}}, {{comics.author}}</h3>
  <div>{{comics.link}}</div>
  <h5 class='card-panel'>{{body}}</h5>
</div>
<div class='row'>
<div class="col s2"></div>
<form action="/comment/{{article._id}}" method="POST"class="card-panel col s8">
<h3>Comments</h3>
<div class="row">
<div class='input-field'>
      <i class='material-icons prefitx'>perm-id</i>
      <input id="icon-prefix" type="text" placeholder="Name" />
</div>
<div class='input-field'>
        <i class='material-icons prefitx'>Comment</i>
        <input id="icon_telephone" type="text" placeholder="Comment" />
</div>
</div>
</form>
</div>
<div class='row'>
  <div class='col s2'></div>
  <div class="col s8">

  </div>
    <div class='row'>
      <div class='input-field'>
        <center>
          <input
            class='btn topnav add-comment-btn'
            type='submit'
            value='Submit'
          />
        </center>
      </div>
    </div>
  </form>
</div>
<div class='row'>
  <div class='col s8 left-align'>
    <h2>Comments</h2>
    {{#if comics.comment}}
      {{#each comics.comment}}
        <div class='card'>
          <p id='nameComment'>{{name}}</p>
          <p>{{body}}</p>
        </div>
      {{/each}}
    {{else}}
      <p>No Comment</p>
    {{/if}}
  </div>
</div>